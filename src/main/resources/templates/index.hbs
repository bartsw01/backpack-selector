{{#partial "content"}}

   {{#if editPost}}
       <h1>Edit your Backpack!</h1>
       <form action="/backpacks/{{editBackpack.id}}/update" method="post">
           <label for="content">Edit this post's content</label>
           <input id="content" name="content" type="text" value="{{editPost.content}}">
   {{else}}
   <h1>Pick your Backpack!</h1>

   <form action="/backpacks/new" method="post">
       <select class="form-control" id="bpSelection" name="beSelection">
           <option value="Camping">Camping</option>
           <option value="Backpacking">Backpacking</option>
           <option value="Bike Touring">Bike Touring</option>
           <option value="Rock Climbing">Rock Climbing</option>
       </select>
   {{/if}}
       <button type="submit" class="btn btn-default">Go!</button>
   </form>
{{/partial}}

{{> layout.hbs}}